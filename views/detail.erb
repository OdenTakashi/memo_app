<body>
  <p>タイトル</p>
  <%@memo.each do |row|%>
    <div>
      <input type="text" id="title" name="title" value="<%=row['title']%>" readonly>
    </div>
    <p>内容</p>
    <div>
      <textarea id="content" name="content" row="5" readonly><%=row['content']%></textarea>
    </div>
    <form action='/memos/<%=row['id']%>'  method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="削除" id="btn02">
      <a href = "/memos/<%=row['id']%>/edit">編集</a>
    </form>
  <%end%>
</body>
